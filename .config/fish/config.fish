# git sync
function gsync
	git reset --hard HEAD~1
	git push -f
	git pull upstream $argv --rebase
	git push
end

# qrcode
function qrcode
          set input "$argv"
          [ -z "$input" ] && local input="@/dev/stdin"
          curl -d "$input" https://qrcode.show
end
